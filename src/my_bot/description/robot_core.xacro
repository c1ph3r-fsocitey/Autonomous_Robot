<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1.0"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1.0"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">
    </link>

    <!-- BASE FOOTPRINT LINK -->

    <link name="base_footprint">
    </link>

    <!-- CHASSIS LINK -->

    <link name="chassis_link">
        <visual>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
            <origin xyz="0.15 0.0 0.075" rpy="0.0 0.0 0.0"/>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
            <origin xyz="0.15 0.0 0.075" rpy="0.0 0.0 0.0"/>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15" >
            <origin xyz="0.15 0.0 0.075" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference = "chassis_link">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- LEFT WHEEL LINK -->

    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05" >
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference = "left_wheel_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- RIGHT WHEEL LINK -->

    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05" >
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>


    <gazebo reference = "right_wheel_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- CASTOR WHEEL LINK -->

    <link name="castor_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <origin xyz="0.1 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <material name = "black" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <origin xyz="0.1 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05" >
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference = "castor_wheel_link">
        <material>Gazebo/Black</material>
        <mu1 value="0.001" />
        <mu2 value="0.001" />
    </gazebo>

    <!-- BASE FOOTPRINT JOINT -->

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </joint>
    

    <!-- BASE CHASSIS JOINT -->

    <joint name="base_chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_link"/>
        <origin xyz="0.1 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </joint>
    
    <!-- LEFT WHEEL JOINT -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="chassis_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="0.075 0.175 0" rpy="-1.57 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <!-- RIGHT WHEEL JOINT -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="chassis_link"/>
        <child link="right_wheel_link"/> 
        <origin xyz="0.075 -0.175 0" rpy="-1.57 0 0"/> 
        <axis xyz="0 0 1"/>
    </joint>

    <!-- CASTOR WHEEL JOINT -->

    <joint name="castor_wheel_base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="castor_wheel_link"/>
        <origin xyz="0.24 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </joint>
    

</robot>
